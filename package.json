    "@bytecodealliance/componentize-js": "^0.16.0",
    "@bytecodealliance/jco": "^1.9.1",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-dynamic-import-vars": "^2.1.5",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.34.8"
  },
  "private": true
}
